<assembly xmlns="http://maven.ahuskyche.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.ahuskyche.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.ahuskyche.org/xsd/assembly-1.1.2.xsd">
    <id>learningserver</id>
    <formats>
        <format>dir</format>
        <format>zip</format>
    </formats>
    <dependencySets>
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <unpack>false</unpack>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/../bin</directory>
            <outputDirectory>/bin</outputDirectory>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../conf</directory>
            <outputDirectory>/conf</outputDirectory>
            <fileMode>0644</fileMode>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>${project.basedir}/../learningserver-starter/src/main/resources/application.yaml</source>
            <outputDirectory>/conf</outputDirectory>
            <destName>application.yaml</destName>
        </file>
        <file>
            <source>${project.basedir}/../learningserver-starter/target/learningserver-starter-${project.version}.jar</source>
            <outputDirectory>/lib</outputDirectory>
            <destName>learningserver-starter-${project.version}.jar</destName>
        </file>
        <file>
            <source>${project.basedir}/../learningserver-scorm/target/learningserver-scorm-${project.version}.jar</source>
            <outputDirectory>/lib</outputDirectory>
            <destName>learningserver-scorm-${project.version}.jar</destName>
        </file>
    </files>
</assembly>